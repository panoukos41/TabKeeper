@inherits Ignis.Components.IgnisRigidComponentBase

@if (Icon is null || Icon is Components.Icon.None) return;

@(Icon switch {
    Components.Icon.User => (@<Ignis.Components.HeroIcons.Solid.UserIcon AdditionalAttributes="AdditionalAttributes" />),
})

@code {
    [Parameter]
    public Icon? Icon { get; set; }

    [Parameter(CaptureUnmatchedValues = true)]
    public IDictionary<string, object>? AdditionalAttributes { get; set; }
}
