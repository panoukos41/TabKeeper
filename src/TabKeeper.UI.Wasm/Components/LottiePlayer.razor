@inherits CoreComponent

<lottie-player
    src="@(Source)"
    count="@(Count)"
    intermission="@(Intermission)"
    speed="@(Speed)"
    direction="@((int)Direction)"
    background="@(Background)"
    loop="@(Loop)"
    controls="@(Controls)"
    mode="@(Mode)"
    renderer="@(Renderer)"
    disableCheck="@(DisableCheck)"
    hover="@(Hover)"
    autoplay="@(AutoPlay)"
    preserveAspectRatio="@(PreserveAspectRatio)"
    @attributes="Attributes">
</lottie-player>
