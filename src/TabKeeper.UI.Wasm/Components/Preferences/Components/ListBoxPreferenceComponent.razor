@inherits Abstract.PreferenceValueComponentBase<ListBoxPreference>

<div>
    <div>
        <label></label>
    </div>
    <select class="w-full rounded bg-primary px-2 py-1" value="@Preference.Value" @onchange="OnChange">
        @foreach (var value in Preference)
        {
            <option value="@value">@GetValueSummary()</option>
        }
    </select>
</div>

@code {
    public void OnChange(ChangeEventArgs e)
    {
        if (e.Value is string arg)
        {
            Preference.Value = arg;
        }
    }
}
